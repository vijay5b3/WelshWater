{
  "name": "arcgis-experience-builder-chatbot",
  "version": "1.0.0",
  "description": "AI-powered chatbot for Welsh Government spatial data in ArcGIS Experience Builder",
  "main": "server/src/server.js",
  "scripts": {
    "install:client": "cd client && npm install",
    "install:server": "cd server && npm install",
    "install:all": "npm run install:client && npm run install:server",
    "build": "cd client && npm run build",
    "start:client": "cd client && npm start",
    "start:server": "cd server && npm start",
    "dev": "concurrently \"npm run start:client\" \"npm run start:server\"",
    "test": "echo \"Add tests here\"",
    "deploy": "npm run build && vercel --prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YOUR_USERNAME/arcgis-experience-builder-chatbot.git"
  },
  "keywords": [
    "arcgis",
    "experience-builder",
    "chatbot",
    "ai",
    "gis",
    "welsh-government",
    "spatial-data",
    "openrouter"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/YOUR_USERNAME/arcgis-experience-builder-chatbot/issues"
  },
  "homepage": "https://github.com/YOUR_USERNAME/arcgis-experience-builder-chatbot#readme",
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
